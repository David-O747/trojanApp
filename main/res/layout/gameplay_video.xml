<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_turquoise"
    android:layout_marginTop="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/logo"
                android:src="@drawable/logo_project_trojan" />

            <!-- Place title below logo, centered horizontally -->
            <TextView
                android:id="@+id/gameplayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gameplay_video"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/logo"
                android:layout_marginTop="20dp" />
        </RelativeLayout>

        <!-- Video FrameLayout -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <VideoView
                android:id="@+id/videoview1"
                android:layout_width="380dp"
                android:layout_height="210dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/videopreview1"
                android:layout_width="380dp"
                android:layout_height="210dp"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/videopreview1"
                android:scaleType="centerCrop"
                android:contentDescription="@string/gameplay_video" />
        </FrameLayout>

        <!-- Description header -->
        <TextView
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/white"
            android:textSize="25sp"
            />

        <!-- Description paragraphs -->
        <TextView
            android:id="@+id/description_text_part1"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gameplay_videos_description_part3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/description_text_part2"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gameplay_videos_description_part2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/description_text_part4"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gameplay_videos_description_part5"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/description_text_part5"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gameplay_videos_description_part4"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Footer RelativeLayout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp">

            <View
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="#1E1E1E" />

            <ImageView
                android:id="@+id/logo_footer"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:contentDescription="@string/logo"
                android:src="@drawable/logo_project_trojan"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:contentDescription="@string/contact_us"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:layout_marginStart="104dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/dark_turquoise" />

            <ImageView
                android:id="@+id/email_icon"
                android:contentDescription="@string/email"
                android:src="@drawable/email_icon"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="44dp"
                android:layout_marginStart="68dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:layout_marginStart="140dp"
                android:layout_marginTop="44dp"
                android:textColor="@color/dark_turquoise" />

            <TextView
                android:id="@+id/footer_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_item1"
                android:layout_marginTop="80dp"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_marginStart="104dp" />

            <TextView
                android:id="@+id/footer_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_item2"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_marginStart="104dp"
                android:layout_below="@id/footer_item1" />

            <TextView
                android:id="@+id/footer_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_item3"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_marginStart="104dp"
                android:layout_below="@id/footer_item2" />

            <TextView
                android:id="@+id/footer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_item4"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_marginStart="104dp"
                android:layout_below="@id/footer_item3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright"
                android:layout_marginStart="152dp"
                android:layout_marginTop="154dp"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>